<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_popup"
    android:orientation="vertical"
    android:padding="10sp">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/avilaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ávila"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/arenasBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Arenas de San Pedro"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/bejarBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Béjar"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/burgosBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Burgos"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/mirandaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Miranda de Ebron"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/leonBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="León"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/ponferradaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ponferrada"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/palenciaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Palencia"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/salamancaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salamanca"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/segoviaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Segovia"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/soriaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Soria"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/valladolidBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Valladolid"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/zamoraBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Zamora"
            android:textSize="24sp" />

    </RadioGroup>
</LinearLayout>